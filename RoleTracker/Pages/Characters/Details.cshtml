@page
@model RoleTracker.Pages.Characters.DetailsModel

@{
    ViewData["Title"] = "Detalle";
}

<h1>Detalle del personaje</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Race)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Race)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Player)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Player)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Level)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Game)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Game.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Character?.Id" class="btn btn-primary">Editar</a> 
    <a asp-page="./Index" class="btn btn-dark">Volver</a>
</div>
