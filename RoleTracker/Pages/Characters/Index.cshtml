@page
@model RoleTracker.Pages.Characters.IndexModel

@{
    ViewData["Title"] = "Personajes";
}

<h1>Personaje</h1>

<p>
    <a asp-page="Create">Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Player)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].GameId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Character) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Race)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalle</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
