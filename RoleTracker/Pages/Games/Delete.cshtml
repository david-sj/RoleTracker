<h3>Estás seguro de que quieres eliminar esta partida?</h3>
<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.MasterName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.MasterName)
        </dd>
